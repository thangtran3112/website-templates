extends  ../_skeleton

//- Includes
include ../sections/_header-modern
include ../sections/_footer-modern
include ../components/_ui-posts
include ../components/_ui-pagination

block variables
	- var activeCategory = 'blog'
	- var pageName = 'Blog List'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg'
	})

	// Section Shop
	section.section.section-xl.bg-default.text-md-start
		.container: .row.row-50.row-md-60
			.col-lg-8.col-xl-9: .inset-xl-right-70
				.row.row-50.row-md-60.row-lg-80.row-xl-100
					.col-12
						+post-modern({
							tag: 'news',
							time: {
								datetime: '2023-08-09',
								dateText: 'August 9, 2023'
							},
							title: 'How to Pipe a Fluffy Frosting Border on a Cake',
							img: 'post-7-800x394',
							text: 'Risus commodo viverra maecenas accumsan lacus vel. Nulla facilisi cras fermentum odio eu. Et egestas quis ipsum suspendisse. Sed nisi lacus sed viverra. Sodales ut eu sem.'
						})
