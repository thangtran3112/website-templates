extends  ../_skeleton

//- Includes
include ../components/_ui-card
include ../sections/_header-modern
include ../sections/_footer-modern
block variables
	- var activeCategory = 'elements'
	- var pageName = 'Tabs & Accordions'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg'
	})

	// Tabs and Accordion
	section.section.section-xl.bg-default.text-md-start
		.container: .row.row-30.justify-content-center.justify-content-xl-between
			.col-md-6
				h3 Accordions
				// Bootstrap collapse
				#accordion1.card-group-custom.card-group-corporate(role='tablist' aria-multiselectable='false')
					+card({
						show: true,
						parentId: 'accordion1',
						number: '1',
						title: 'How can I change something in my order?'
					}).card-corporate
						p If you need to change something in your order, please contact us immediately. We usually process orders within 30 minutes, and once we have processed your order, we will be unable to make any changes.

					+card({
						parentId: 'accordion1',
						number: '2',
						title: 'How can I pay for my order?'
					}).card-corporate
						p We accept Visa, MasterCard, and American Express credit and debit cards for your convenience.

					+card({
						parentId: 'accordion1',
						number: '3',
						title: 'How long will my order take to be delivered?'
					}).card-corporate
						p Delivery times will depend on your location. Once payment is confirmed your order will be packaged. Delivery can be expected within a day.

			.col-md-6.col-xl-5
				h3 Horizontal Tabs
				// Bootstrap tabs
				#tabs-1.tabs-custom.tabs-horizontal.tabs-line
					// Nav tabs
					.nav-tabs-wrap: ul.nav.nav-tabs
						li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-1-1' data-bs-toggle='tab') About
						li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-2' data-bs-toggle='tab') Our mission
						li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-3' data-bs-toggle='tab') Our goals

					// Tab panes
					.tab-content
						div#tabs-1-1.tab-pane.fade.show.active
							p Cum nomen prarere, omnes peses amor pius, rusticus racanaes. Ubi est mirabilis gemna? Cum gabalium velum, omnes fugaes
							p Ubi est peritus devatio? A falsis, adelphis peritus apolloniates. Est raptus clabulare, cesaris. Cum pulchritudine manducare, omnes genetrixes captis bassus

						div#tabs-1-2.tab-pane.fade
							p Vae. Dexter fiscina aliquando vitares animalis est. Nunquam convertam bulla. Cum pars prarere, omnes seculaes
							p Navis dexter historia est. Luba, homo, et indictio. Emeritis eposs ducunt ad animalis. Cum solem assimilant, omnes byssuses vitare clemens, secundus nixuses.

						div#tabs-1-3.tab-pane.fade
							p A falsis, historia primus gallus. Est bassus tabes, cesaris. Gallus de mirabilis agripeta, locus mens! Primus ratione
							p Cur eleates accelerare? Heu. Ecce, superbus onus! Demolitione secundus homo est. Cum cacula congregabo, omnes coordinataees acquirere dexter, flavum galataees.
	='\n'

	// Page Footer
	+footer-modern({
		gallery: [
			{img: 'grid-gallery-1-130x130', imgOriginal: 'grid-gallery-1-original'},
			{img: 'grid-gallery-2-130x130', imgOriginal: 'grid-gallery-2-original'},
			{img: 'grid-gallery-3-130x130', imgOriginal: 'grid-gallery-3-original'},
			{img: 'grid-gallery-4-130x130', imgOriginal: 'grid-gallery-4-original'},
			{img: 'grid-gallery-5-130x130', imgOriginal: 'grid-gallery-5-original'},
			{img: 'grid-gallery-6-130x130', imgOriginal: 'grid-gallery-6-original'}
		]
	})
