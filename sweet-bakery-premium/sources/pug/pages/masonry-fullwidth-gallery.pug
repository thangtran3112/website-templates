extends  ../_skeleton

//- Includes
include ../components/_ui-thumbnail
include ../sections/_header-modern
include ../sections/_footer-modern
block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Masonry Fullwidth Gallery'

block page  
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg'
	})

	// Msonry fullwidth-gallery
	section.section.section-xl.bg-default
		.container-fluid.isotope-wrap.isotope-custom-2
			.isotope-filters
				//- Isotope Filters
				button.isotope-filters-toggle.button.button-sm.button-icon.button-icon-right.button-default-outline( data-custom-toggle='.isotope-filters-list', data-custom-toggle-hide-on-blur='true' )
					span.icon.mdi.mdi-chevron-down
					| Filter

				.isotope-filters-list-wrap
					ul.isotope-filters-list
						li: a.active(href='#', data-isotope-filter='*') All Categories
						li: a(href='#', data-isotope-filter='Type 1') Cakes
						li: a(href='#', data-isotope-filter='Type 2') Cupcakes

			.row.row-30.isotope( data-lightgallery='group' )
				.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 1')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-1-480x314',
						imgOriginal: 'grid-gallery-1-original',
						title: 'Sponge Cake',
						price: '16'
					})

				.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 1')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-2-480x314',
						imgOriginal: 'grid-gallery-2-original',
						title: 'Angel Food Cake',
						price: '17'
					})

				.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 2')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-3-480x628',
						imgOriginal: 'grid-gallery-5-original',
						title: 'Strawberry Cupcake',
						price: '12'
					})

				.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 2')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-4-480x314',
						imgOriginal: 'grid-gallery-7-original',
						title: 'Lemon Cupcake',
						price: '12'
					})

				.col-sm-6.col-md-4.col-xl-4.isotope-item(data-filter='Type 1')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-5-640x314',
						imgOriginal: 'grid-gallery-4-original',
						title: 'Oranges & Pineapples',
						price: '12'
					})

				.col-sm-6.col-md-4.col-xl-2.isotope-item(data-filter='Type 1')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-6-320x314',
						imgOriginal: 'grid-gallery-3-original',
						title: 'Genoise Cake',
						price: '9'
					})

				.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 2')
					+thumbnail-classic({
						img: 'masonry-fullwidth-gallery-8-480x314',
						imgOriginal: 'grid-gallery-9-original',
						title: 'Champagne Cupcake',
						price: '18'
					})
				.col-1


	// Page Footer
	+footer-modern({
		gallery: [
			{img: 'grid-gallery-1-130x130', imgOriginal: 'grid-gallery-1-original'},
			{img: 'grid-gallery-2-130x130', imgOriginal: 'grid-gallery-2-original'},
			{img: 'grid-gallery-3-130x130', imgOriginal: 'grid-gallery-3-original'},
			{img: 'grid-gallery-4-130x130', imgOriginal: 'grid-gallery-4-original'},
			{img: 'grid-gallery-5-130x130', imgOriginal: 'grid-gallery-5-original'},
			{img: 'grid-gallery-6-130x130', imgOriginal: 'grid-gallery-6-original'}
		]
	})