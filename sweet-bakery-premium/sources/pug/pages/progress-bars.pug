extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-countdown
include ../sections/_header-modern
include ../sections/_footer-modern
block variables
	- var activeCategory = 'elements'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg'
	})

	// Section Skill Bars and Time Circles
	section.section.section-xl.bg-default
		.container
			.row.row-50.align-items-center.justify-content-center.justify-content-xl-between
				.col-md-10.col-lg-6
					+progress-bar-linear({
						title: "Dedication",
						valueTo: "78"
					})

					+progress-bar-linear({
						title: "Knowledge",
						valueTo: "69"
					})

					+progress-bar-linear({
						title: "Professionalism",
						valueTo: "78"
					})

				.col-lg-6
					+countdown({
						to: '2023-05-31'
					}).countdown-without-seconds.justify-content-center
	='\n'

	// Page Footer
	+footer-modern({
		gallery: [
			{img: 'grid-gallery-1-130x130', imgOriginal: 'grid-gallery-1-original'},
			{img: 'grid-gallery-2-130x130', imgOriginal: 'grid-gallery-2-original'},
			{img: 'grid-gallery-3-130x130', imgOriginal: 'grid-gallery-3-original'},
			{img: 'grid-gallery-4-130x130', imgOriginal: 'grid-gallery-4-original'},
			{img: 'grid-gallery-5-130x130', imgOriginal: 'grid-gallery-5-original'},
			{img: 'grid-gallery-6-130x130', imgOriginal: 'grid-gallery-6-original'}
		]
	})
