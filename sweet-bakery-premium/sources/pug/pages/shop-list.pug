extends  ../_skeleton

//- Includes
include ../components/_ui-product
include ../components/_ui-pagination
include ../sections/_header-modern
include ../sections/_footer-modern
block variables
	- var activeCategory = 'shop'
	- var pageName = 'Shop List'

block page
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg'
	})

	// Section Shop
	section.section.section-xxl.bg-default.text-md-start
		.container: .row.row-50
			.col-lg-4.col-xl-3: include ../includes/_aside-product
			.col-lg-8.col-xl-9
				.product-top-panel.group-md
					p.product-top-panel-title Showing 1â€“3 of 28 results
					div: .group-sm.group-middle
						.product-top-panel-sorting
							select(data-minimum-results-for-search="Infinity")
								option(value="1") Sort by newness
								option(value="2") Sort by popularity
								option(value="3") Sort by alphabet

						.product-view-toggle
							a.mdi.mdi-apps.product-view-link.product-view-grid(href=links.shop)
							a.mdi.mdi-format-list-bulleted.product-view-link.product-view-list.active(href='shop-list.html')

				.row.row-30.row-md-50.row-lg-60
					.col-12
						+product-horizontal({
							mod: 'text-center text-sm-start',
							unit: 'flex-column flex-sm-row',
							img: 'product-big-1-328x330',
							title: 'Chocolate Truffles',
							price: '23',
							priceOld: '30',
							text: 'Tellus at urna condimentum mattis pellentesque id nibh tortor rutrum tellus pellentesque eu tincidunt.'
						})
					.col-12
						+product-horizontal({
							mod: 'text-center text-sm-start',
							unit: 'flex-column flex-sm-row',
							img: 'product-big-2-328x330',
							title: 'Dark Chocolate Cake',
							price: '15',
							text: 'Pellentesque elit ullamcorper dignissim cras tincidunt lobortis facilisi etiam dignissim diam quis enim.'
						})
					.col-12
						+product-horizontal({
							mod: 'text-center text-sm-start',
							unit: 'flex-column flex-sm-row',
							img: 'product-big-3-328x330',
							title: 'Milk Chocolate & Cherry Pudding',
							price: '25',
							priceOld: '35',
							text: 'Facilisi etiam dignissim diam quis enim lobortis. Augue lacus viverra vitae congue eu consequat ac felis.'
						})

				.pagination-wrap: +pagination-bootstrap(null, 1, 3)
	='\n'

	// Page Footer
	+footer-modern({
		gallery: [
			{img: 'grid-gallery-1-130x130', imgOriginal: 'grid-gallery-1-original'},
			{img: 'grid-gallery-2-130x130', imgOriginal: 'grid-gallery-2-original'},
			{img: 'grid-gallery-3-130x130', imgOriginal: 'grid-gallery-3-original'},
			{img: 'grid-gallery-4-130x130', imgOriginal: 'grid-gallery-4-original'},
			{img: 'grid-gallery-5-130x130', imgOriginal: 'grid-gallery-5-original'},
			{img: 'grid-gallery-6-130x130', imgOriginal: 'grid-gallery-6-original'}
		]
	})