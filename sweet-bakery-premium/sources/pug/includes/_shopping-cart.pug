.table-custom-responsive
	table.table-custom.table-cart
		thead
			tr
				th Product name
				th Price
				th Quantity
				th Total
		tbody
			tr
				td
					.prod-card-inner
						a.table-cart-figure(href=links.product): +png('product-mini-4-146x132')
						a.table-cart-link(href=links.product) Milk Chocolate Pudding
				td $25.00
				td: div.table-cart-stepper: input.form-input(type="number" data-zeros="true" value="1" min="1" max="1000")
				td $25
			tr
				td
					.prod-card-inner
						a.table-cart-figure(href=links.product): +png('product-mini-5-146x132')
						a.table-cart-link(href=links.product) Chocolate Truffles
